@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var userName = "";
    var fullName = "";
    var userName_first = UserManager.GetUserName(User).ToString();
    var index = userName_first.IndexOf('9');
    userName = userName_first.Substring(0, index);
    fullName = userName_first.Replace('9', ' ');
    ViewData["Title"] = "Welcome back, " + userName;
}

<div class="jumbotron" style="opacity: 0.8">
    <h1>@ViewData["Title"]</h1>
</div>
<style>
    body {
        background: url("./fade.jpg");
        background-size: cover;
    }
</style>

<div class="row" style="background: whitesmoke">
    <div class="col-md-4">
        <h2>@fullName</h2>
        <p>
            Last login: 19:45 16.10.2018<br>
            ID code: 39705150293<br>
            Unreade messages: 2
        </p>
    </div>
    <div class="col-md-6">
        <h2>Your favourite medicines</h2>
        <p>Click on the button below to be redirected to a list of medicines favourited by you!</p>
        <p>
            <a class="btn btn-default"
               href="http://ravimiregister.ravimiamet.ee/default.aspx?pv=HumRavimid.Otsing">Favourites &raquo;</a>
        </p>
    </div>
</div>


