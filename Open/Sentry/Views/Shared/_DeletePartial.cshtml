@{
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<h3>Kas olete kindel, et soovite eemaldada selle?</h3>

<div class="form-horizontal">
    <h4>@ViewBag.SubTitle</h4>
    <hr />

    @RenderBody()

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@ViewBag.Button class="btn btn-default" />
            </div>
        </div>
        <div>
            @RenderSection("Actions")
        </div>
    }
</div>