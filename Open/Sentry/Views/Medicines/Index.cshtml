        <tr>
            @*<td><button type="button" class="button1" onclick="location.href =
    '@Url.Action("AddMedicineToPortfolio", "Portfolios", new {id = item.ID})'">Lisa portfelli</button></td>*@
            @*<td><button type="button" class="next button1" data-toggle="modal" data-target="#confirmationModal" data-whatever="TYRA" >Vajuta!</button></td>*@
            <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="TYRA">Open modal for mdo</button></td>
